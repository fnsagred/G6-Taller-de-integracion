<% content_for :title do %>My super sweet dashboard<% end %>
<div class="gridster">
  <ul>
    <li data-row="1" data-col="1" data-sizex="2" data-sizey="1">
      <div data-id="welcome" data-view="Text" data-title="Central Ahorro" data-text="Estadísticas generales del negocio" data-moreinfo="<%=Time.now.strftime("%Y-%m-%d")%>"></div>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="synergy" data-view="Meter" data-title="Porcentaje de Pedidos Efectivos" data-min="0" data-max="100"></div>
    </li>

    <li data-row="1" data-col="1" data-sizex="2" data-sizey="2">
      <div data-id="buzzwords" data-view="List" data-unordered="true" data-title="Clientes con más compras" data-moreinfo="número de veces que han comprado"></div>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="valuation" data-view="Number" data-title="Ventas del Mes" data-moreinfo="En pesos" data-prefix="$"></div>
    </li>

    <li data-row="1" data-col="1" data-sizex="2" data-sizey="1">
      <div data-id="convergence" data-view="Graph" data-title="Evolución Ventas" style="background-color:#ff9618"></div>
    </li>
  </ul>
  <center><div style="font-size: 12px"></div></center>
</div>